{
  "manifest_version": 2,

  "name": "APOD by The Trav",
  "short_name": "APOD by The Trav",
  "description": "Displays the Astronomy Picture of the Day (APOD) as your new tab page",
  "version": "3.0",

  "browser_action": {
    "default_icon": "images/sun_icon.png",
    "default_title": "APOD by The Trav",
    "default_popup": "options.html"
  },

  "applications": {
    "gecko": {
      "id": "travis.lawrence12@gmail.com",
      "strict_min_version": "54.0"
    }
  },

  "icons": [
    {
      "src": "favicon.ico",
      "sizes": "64x64 32x32 24x24 16x16",
      "type": "image/x-icon"
    },
    {
      "src": "sun_icon.png",
      "type": "image/png",
      "sizes": "192x192"
    }
  ],

  "background": {
    "script": ["background.js"],
    "persistent": false
  },

  "chrome_url_overrides": {
    "newtab": "apod-by-trav.html"
  },

  "permissions": [
    "topSites",
    "storage",
    "https://api.nasa.gov/*",
    "https://www.googleapis.com/customsearch/*",
    "https://www.google-analytics.com/collect"
  ]
}
