{
  "manifest_version": 2,

  "name": "APOD by The Trav",
  "short_name": "APOD by The Trav",
  "description": "This extension shows either today's or a random Astronomy Picture of the Day (APOD)",
  "version": "1.1.5",

  "browser_action": {
    "default_title": "New Tab - APOD",
    "default_icon": "public/images/sun_128.png"
  },

  "icons": {
    "128": "public/images/sun_128.png"
  },

  "chrome_url_overrides" : {
    "newtab": "index.html"
  },

  "permissions": [
    "topSites",
    "chrome://favicon/",
    "https://api.nasa.gov/*"
  ]
}
